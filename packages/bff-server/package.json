{
  "name": "component-store-bff-server",
  "version": "0.1.0",
  "private": true,
  "description": "BFF server for component-store.",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "gen:gql": "zx ./codegen-gql.mjs",
    "gen:k8s": "npm run gen:k8s-code",
    "gen:k8s-code": "ts-node src/kubernetes/gen/index.ts && prettier --write \"src/kubernetes/**/*.ts\"",
    "gen:k8s-doc": "typedoc --options src/kubernetes/typedoc.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@apollo/server": "^4.7.4",
    "@graphql-tools/utils": "^10.0.1",
    "@kubernetes/client-node": "^0.18.1",
    "@nestjs/apollo": "^12.0.1",
    "@nestjs/common": "^10.0.2",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.2",
    "@nestjs/graphql": "^12.0.1",
    "@nestjs/platform-express": "^10.0.2",
    "@nestjs/platform-ws": "^10.0.2",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/websockets": "^10.0.2",
    "apollo-server-errors": "^3.3.1",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dataloader": "^2.2.2",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-query-complexity": "^0.12.0",
    "helmet": "^7.0.0",
    "isomorphic-ws": "^5.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "nanoid": "^3.3.6",
    "nanoid-dictionary": "^4.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "urllib": "^3.17.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-graphql-request": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@nestjs/cli": "^10.1.11",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@types/body-parser": "^1.19.2",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^18.11.7",
    "@types/supertest": "^2.0.12",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "graphql-codegen-plugin-typescript-swr": "0.8.3",
    "jest": "^29.5.0",
    "json-schema-to-typescript": "^13.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.3"
  }
}
